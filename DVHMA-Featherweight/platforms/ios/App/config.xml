<?xml version='1.0' encoding='utf-8'?>
<widget id="de.zertapps.dvhma.featherweight" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="CDVWebViewEngine">
        <param name="ios-package" value="CDVWebViewEngine" />
    </feature>
    <feature name="LaunchScreen">
        <param name="ios-package" value="CDVLaunchScreen" />
    </feature>
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <feature name="Console">
        <param name="ios-package" value="CDVLogger" />
        <param name="onload" value="true" />
    </feature>
    <feature name="HandleOpenUrl">
        <param name="ios-package" value="CDVHandleOpenURL" />
        <param name="onload" value="true" />
    </feature>
    <feature name="IntentAndNavigationFilter">
        <param name="ios-package" value="CDVIntentAndNavigationFilter" />
        <param name="onload" value="true" />
    </feature>
    <feature name="GestureHandler">
        <param name="ios-package" value="CDVGestureHandler" />
        <param name="onload" value="true" />
    </feature>
    <feature name="StatusBarInternal">
        <param name="ios-package" value="CDVStatusBarInternal" />
        <param name="onload" value="true" />
    </feature>
    <feature name="DeepLink">
        <param name="ios-package" value="DeepLink" />
    </feature>
    <feature name="WebIntent">
        <param name="ios-package" value="WebIntent" />
    </feature>
    <feature name="DVHMAStorage">
        <param name="ios-package" value="DVHMAStorage" />
    </feature>
    <name>Featherweight DVHMA</name>
    <author href="https://logicalhacking.com">Logical Hacking</author>
    <description>
        Damn Vulnerable Hybrid Mobile App (DVHMA) - Featherweight edition.
        Minimal hybrid app for security testing on Android and iOS.
    </description>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <config-file parent="CFBundleURLTypes" target="*-Info.plist">
        <array>
            <dict>
                <key>CFBundleURLSchemes</key>
                <array>
                    <string>dvhma</string>
                </array>
            </dict>
        </array>
    </config-file>
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="MediaPermissionGrantType" value="grantIfSameHostElsePrompt" />
    <preference name="MediaTypesRequiringUserActionForPlayback" value="none" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="SuppressesLongPressGesture" value="false" />
    <preference name="Suppresses3DTouchGesture" value="false" />
    <preference name="WKWebViewOnly" value="true" />
    <preference name="AllowFileAccessFromFileURLs" value="true" />
    <preference name="AllowUniversalAccessFromFileURLs" value="true" />
    <preference name="deployment-target" value="12.0" />
    <preference name="UseSwiftLanguageVersion" value="5" />
</widget>
